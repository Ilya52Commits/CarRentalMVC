@model CarRentalMVC.Models.User

<div class="input-group mb-3">
    <button id="switch-sign-in" class="btn btn-outline-secondary" type="button">Войти</button>
    <button id="switch-sign-up" class="btn btn-outline-secondary" type="button">Регистрация</button>
</div>

<div id="sign-in">
    <h2>Войти</h2>
    <form class="col-4">
        <div class="mb-4">
            <label class="form-label">Email</label>
            <input type="email" class="form-control" />
        </div>
        <div class="mb-4">
            <label class="form-label">Пароль</label>
            <input type="password" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Войти</button>
    </form>
</div>


<div id="sign-up">
    <h2>Регистрация</h2>
    <form asp-action="PrivateOffice" asp-controller="home">
        <div class="mb-4">
            <label class="form-label" asp-for="Name">Имя</label><br/>
            <input type="text" asp-for="Name" />
        </div>
        <div class="mb-4">
            <label class="form-label" asp-for="LastName">Фамилия</label><br />
            <input type="text" asp-for="LastName" />
        </div>
        <div class="mb-4">
            <label class="form-label" asp-for="Patronymic">Отчество</label><br />
            <input type="text" asp-for="Patronymic" />
        </div>
        <div class="mb-4">
            <label class="form-label" asp-for="Passwort">Пароль</label><br />
            <input type="password" asp-for="Passwort" />
        </div>
        <div class="mb-4">
            <label class="form-label" asp-for="Pasport">Паспорт</label><br />
            <input type="password" asp-for="Pasport" />
        </div>
        <div class="mb-4">
            <label class="form-label" asp-for="Phone">Телефон</label><br />
            <input type="tel" asp-for="Phone" />
        </div>
        <div class="mb-4">
            <label class="form-label" asp-for="DateOfBirth">Дата рождения</label><br />
            <input type="date" asp-for="DateOfBirth" />
        </div>
        <input type="submit" value="Отправить" />
    </form>
</div>
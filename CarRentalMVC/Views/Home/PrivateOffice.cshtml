@model CarRentalMVC.Models.UserModel

<div class="btn-group mb-3">
    <button id="switch-sign-in" class="btn-switch btn btn-primary" type="button">Войти</button>
    <button id="switch-sign-up" class="btn-switch btn btn-primary" type="button">Регистрация</button>
</div>

<div id="sign-in">
    <h2>Войти</h2>
    <form asp-action="Authorization" asp-controller="RegistrationAuthorization" class="col-4">
        <div class="mb-4">
            <label asp-for="Name" class="form-label">Имя</label>
            <input type="text" asp-for="Name" class="form-control" />
            <span class="validation-message" asp-validation-for="Name"></span>
        </div>
        <div class="mb-4">
            <label asp-for="LastName" class="form-label">Фамилия</label>
            <input type="text" asp-for="LastName" class="form-control" />
            <span class="validation-message" asp-validation-for="LastName"></span>
        </div>
        <div class="mb-4">
            <label class="form-label" asp-for="Passwort">Пароль</label>
            <input type="password" asp-for="Passwort" class="form-control" />
            <span class="validation-message" asp-validation-for="Passwort"></span>
        </div>
        <button type="submit" class="btn btn-primary">Войти</button>
    </form>
</div>


<div id="sign-up">
    <h2>Регистрация</h2>
    <form asp-action="Registration" asp-controller="RegistrationAuthorization" class="col-4">
        <div class="mb-4">
            <label class="form-label" asp-for="Name">Имя</label><br/>
            <input type="text" asp-for="Name" class="form-control" />
            <span class="validation-message" asp-validation-for="Name"></span>
        </div>
        <div class="mb-4">
            <label class="form-label" asp-for="LastName">Фамилия</label><br />
            <input type="text" asp-for="LastName" class="form-control" />
            <span class="validation-message" asp-validation-for="LastName"></span>
        </div>
        <div class="mb-4">
            <label class="form-label" asp-for="Patronymic">Отчество</label><br />
            <input type="text" asp-for="Patronymic" class="form-control" />
            <span class="validation-message" asp-validation-for="Patronymic"></span>
        </div>
        <div class="mb-4">
            <label class="form-label" asp-for="Passwort">Пароль</label><br />
            <input type="password" asp-for="Passwort" class="form-control" />
            <span class="validation-message" asp-validation-for="Passwort"></span>
        </div>
        <div class="mb-4">
            <label class="form-label" asp-for="Pasport">Паспорт</label><br />
            <input type="password" asp-for="Pasport" class="form-control" />
            <span class="validation-message" asp-validation-for="Pasport"></span>
        </div>
        <div class="mb-4">
            <label class="form-label" asp-for="Phone">Телефон</label><br />
            <input type="tel" asp-for="Phone" class="form-control" />
            <span class="validation-message" asp-validation-for="Phone"></span>
        </div>
        <div class="mb-4">
            <label class="form-label" asp-for="DateOfBirth">Дата рождения</label><br />
            <input type="date" asp-for="DateOfBirth" class="form-control" />
            <span class="validation-message" asp-validation-for="DateOfBirth"></span>
        </div>
        <div class="mb-4">
            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">
                Разрешение обработку персональных данных
            </label>
        </div>
        <input type="submit" class="btn btn-primary" value="Зарегистрироваться" />
    </form>
</div>

@section scripts 
{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}